<% layout('/layouts/boilerplate.ejs') -%>


<div class="top-menu mt-3">
  <%- include("../includes/sidebar.ejs") %>
  <div class="main-menu p-3 ">
    <%- include("../includes/topbar.ejs") %>



    <div class="row">
        
        <h4>Edit Your Post</h4>
        <form action="/posts/<%=post._id%>?_method=PUT" method="post" novalidate class="needs-validation">

          <div class="mb-3 mt-3">
              <input type="text" name="post[title]" value="<%=post.title%>" class="form-control" required>
              <div class="invalid-feedback">Add Title</div>
            </div>

            <div class="mb-3 mt-4">
              <textarea name="post[description]" rows="5" cols="50" class="form-control" required><%=post.description%></textarea>
              <div class="invalid-feedback">Add Description</div>
            </div>

            <button class="btn green-btn">Edit</button>



        </form>
        
    </div>




  </div>
</div>






    
</div>